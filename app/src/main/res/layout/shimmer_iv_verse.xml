<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2.60dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="6.50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_iv_chapters"
        android:padding="6.50dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvVerseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/bg_oragne"
            android:layout_gravity="center_vertical"
            android:textSize="15.60sp"
            android:textColor="@color/orange" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvVerse"
        android:layout_width="match_parent"
        android:layout_height="52.00dp"
        android:background="@drawable/bg_oragne"
        android:layout_margin="3.90dp"
        android:layout_gravity="center_vertical"
        android:textSize="14.30sp"
        android:textColor="@color/black" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

